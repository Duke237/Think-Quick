# Server Configuration
PORT=5000
NODE_ENV=development

# Client Configuration
CLIENT_URL=http://localhost:3000

# Database Configuration
# Set to true for in-memory DB (no MongoDB installation required)
USE_IN_MEMORY=true

# Only needed if USE_IN_MEMORY=false
MONGODB_URL=mongodb://localhost:27017/think-quick-app

# Game Settings
DEFAULT_TIMER_SECONDS=20
MAX_STRIKES=3
FAST_MONEY_BONUS=500
FAST_MONEY_TARGET=100

# Socket.IO Settings
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Security (add in production)
# JWT_SECRET=your-secret-key-here
# SESSION_SECRET=your-session-secret-here

# Logging
LOG_LEVEL=info

# Rate Limiting (optional)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100